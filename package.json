{
    "name": "shopping",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "build-ts": "tsc",
        "debug-build": "npm run build && npm run start",
        "cont-int": "npm run test && npm run-script lint",
        "dev": "nodemon --ignore '*.json' app/server.ts",
        "test": "jest --detectOpenHandles --forceExit --verbose",
        "watch-test": "jest --watchAll --detectOpenHandles --forceExit --coverage --verbose",
        "watch:no-c": "jest --watchAll --detectOpenHandles --forceExit --verbose",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "lint:ts": "eslint --ext=jsx,ts app",
        "prettier:base": "prettier --parser typescript --single-quote",
        "prettier:write": "npm run prettier:base -- --write \"app/**/*.{ts,tsx}\"",
        "serve": "npm run build && node dist/app/server.js",
        "start": "npm run build && node dist/app/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run dev\"",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run debug\"",
        "watch-ts": "tsc -w",
        "watch-node": "nodemon dist/app/server.js",
        "watch-d": "export DEBUG=*",
        "debug": "export DEBUG=* && npm run watch",
        "watch-build": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-d\" \"npm run watch-node\""
    },
    "keywords": [],
    "author": "Oluwabukola Tina",
    "license": "ISC",
    "dependencies": {
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.21",
        "@types/morgan": "^1.9.1",
        "@types/node": "^14.0.23",
        "@types/supertest": "^2.0.10",
        "compression": "^1.7.4",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-winston": "^4.0.5",
        "helmet": "^4.4.1",
        "http-status-codes": "^2.1.4",
        "jest": "^26.1.0",
        "joi": "^17.6.0",
        "mongoose": "^5.9.25",
        "morgan": "^1.10.0",
        "morgan-body": "^2.6.6",
        "node-mocks-http": "^1.11.0",
        "swagger-jsdoc": "^7.0.0-rc.6",
        "swagger-ui-express": "^4.1.6",
        "ts-node": "^10.0.0",
        "typescript": "^3.9.10",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.5"
    },
    "devDependencies": {
        "@types/concurrently": "^6.0.1",
        "@types/debug": "^4.1.5",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "concurrently": "^6.0.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.5.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-security": "^1.4.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "should": "^13.2.3",
        "supertest": "^6.2.4",
        "ts-jest": "^26.5.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettier:write && lint-staged"
        }
    },
    "precommit": "NODE_ENV=production lint-staged",
    "lint-staged": {
        "app/**/*.{js,ts}": [
            "eslint --fix"
        ]
    }
}
